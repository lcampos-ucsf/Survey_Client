<%= widget_div do %>

<table>
	<thead>
		<tr>
			<td>Action</td>
			<td>Name</td>
			<td>Description</td>
			<td>Start Date</td>
			<td>End Date</td>
		</tr>
	</thead>

	<% for invite in @invites do %>
	
		<tbody>
			<tr>
				<td>
					<a href="/surveys/<%= invite.Id%>/show?page=1" class="btn primary medium" > Start </a>
					<% if invite.Progress_Save__c != nil %>
						<a href="/surveys/<%= invite.Id%>/show?page=<%= invite.Progress_Save__c.to_i %>" class="btn success medium" > Resume </a>
					<% end %>
				</td>
				<td> <%= invite.Survey_Name__c %> </td>
				<td></td>
				<td><%= invite.Start_Date__c.strftime('%m/%d/%Y') %></td>
				<td><%= invite.End_Date__c.strftime('%m/%d/%Y') %></td>
			</tr>
		</tbody>

	<% end %>

	
</table>

<% end %>