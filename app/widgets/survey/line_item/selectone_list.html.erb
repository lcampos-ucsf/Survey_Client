<%= widget_div :class => :question_wrap do  %>

	<label class="q_text" > <%= @line_item.Question_Description__c %> : </label>
	<input type="hidden" name="<%= @line_item.Id%>" value="<%= @line_item.Question_Description__c %>"/>

	<ul class="a_list">
	<% @answerlabels.each do |al| %>
		<li> 
			<% if @respVal == al.Resource_Name__c %>
				<input type="radio" name="q#_<%= @line_item.Id%>_radio_<%= @respId %>" value="<%= al.Resource_Name__c%>" checked />
			<% else %>
				<input type="radio" name="q#_<%= @line_item.Id%>_radio_<%= @respId %>" value="<%= al.Resource_Name__c%>" />
			<% end %>
			<input type="hidden" name="<%= al.Resource_Name__c%>" value="<%= al.Answer_Text__c %>"/>
			<span> <%= al.Answer_Text__c %> </span>
		</li>
	<% end %>
	</ul>

<% end %>