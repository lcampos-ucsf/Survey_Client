<h1>Statistics</h1>

<%= javascript_include_tag 'visualize.jQuery.js' %>
<%= stylesheet_link_tag 'visualize_basic', :media => 'screen' %>

<script type="text/javascript">
	var searchstatspath = '<%= stats_data_invite_index_path %>';
	j$(function(){
		//j$('table').visualize({type: 'pie', height: '300px', width: '420px'});
		j$('table').visualize({type: 'line', width: '420px'});
	});

	j$(document).ready(function() {
		//this fixes all iPad onclick issues
		var ua = navigator.userAgent,
	    event = (ua.match(/iPad/i)) ? "touchstart" : "click";

		j$("#survey_search_btn").bind(event, function(e) {
		    getstats(j$('#search_results'), j$('#sac_data').val(), '#search_results_header');
		});
	});
</script>

<div class="survey-search-div" >
	<input type="text" id="simple_autocomplete_comp" class="simple_autocomplete_comp" data-url="<%= survey_search_invite_index_path %>" value="" data-ac-type="simple" style="width:300px;" autocomplete="off" />
	<input type="text" id="sac_data" class="sac_data" style="display:none;" autocomplete="off" />

	<a class="btn secondary" id="survey_search_btn" >Search</a>
</div>

<h4 id="search_results_header" style="display:none;" >Search Results : </h4>
<div id="search_results" style="display:table; height:200px;" ></div>


